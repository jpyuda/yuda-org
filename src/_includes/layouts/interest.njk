---
layout: layouts/base.njk
---

<article>
	<h1>{{ title }}</h1>
	
	<div class="content">
		{{ content | safe }}
	</div>

	<section class="current-work">
		<h2>Current Work</h2>
		{% set foundProjects = false %}
		{% for project in collections.projects %}
			{% if project.data.research_interests %}
				{% for interestSlug in project.data.research_interests %}
					{% if interestSlug == page.fileSlug %}
						{% if not foundProjects %}
							<ul>
							{% set foundProjects = true %}
						{% endif %}
						<li>
							<a href="{{ project.url }}">{{ project.data.title }}</a>
							{% if project.date_display %}
								<span class="date">({{ project.project_period }})</span>
							{% else %}
								<span class="date">({{ project.date | readableDate }})</span>
							{% endif %}
						</li>
					{% endif %}
				{% endfor %}
			{% endif %}
		{% endfor %}
		{% if foundProjects %}
			</ul>
		{% else %}
			<p>No current projects in this area.</p>
		{% endif %}
	</section>

	{% if emerging_directions %}
	<section class="emerging-directions">
		<h2>Emerging Directions</h2>
		<ul>
		{% for direction in emerging_directions %}
			<li>{{ direction | replace("-", " ") | title }}</li>
		{% endfor %}
		</ul>
	</section>
	{% endif %}

	{% if open_questions %}
	<section class="open-questions">
		<h2>Open Questions</h2>
		<ul>
		{% for question in open_questions %}
			<li>{{ question | replace("-", " ") | title }}</li>
		{% endfor %}
		</ul>
	</section>
	{% endif %}
</article>