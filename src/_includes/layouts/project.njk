---
layout: layouts/base.njk
---

<article>
	<h1>{{ title }}</h1>
	
	{% if date %}
	<p class="date">{{ date | readableDate }}</p>
	{% endif %}

	<div class="content">
		{{ content | safe }}
	</div>

	{% if research_interests %}
	<section class="related-areas">
		<h2>Related Areas of Interest</h2>
		<ul>
		{% for interestSlug in research_interests %}
			{% for interest in collections.interests %}
				{% if interest.fileSlug == interestSlug %}
				<li><a href="{{ interest.url }}">{{ interest.data.title }}</a></li>
				{% endif %}
			{% endfor %}
		{% endfor %}
		</ul>
	</section>
	{% endif %}

	{% if impact_areas %}
	<section class="impact-areas">
		<h2>Impact Areas</h2>
		<ul>
		{% for area in impact_areas %}
			<li>{{ area | replace("-", " ") | title }}</li>
		{% endfor %}
		</ul>
	</section>
	{% endif %}

	{% if emerging_directions %}
	<section class="emerging-directions">
		<h3>Emerging Directions</h3>
		<ul>
		{% for direction in emerging_directions %}
			<li>{{ direction | replace("-", " ") | title }}</li>
		{% endfor %}
		</ul>
	</section>
	{% endif %}

	{% if open_questions %}
	<section class="open-questions">
		<h3>Open Questions</h3>
		<ul>
		{% for question in open_questions %}
			<li>{{ question | replace("-", " ") | title }}</li>
		{% endfor %}
		</ul>
	<% endif %}